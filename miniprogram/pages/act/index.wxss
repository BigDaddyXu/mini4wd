.act-banner {
  width: 100%;
  height: 300rpx;
}
.act-item {
  background-color: #ffffff;
  margin: 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
}
.act-img {
  width: 100%;
  height: 350rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.act-title {
  font-size: 16px;
  font-weight: bold;
  margin: 4rpx;
}
.act-desc {
  font-size: 14px;
  margin: 4rpx;
}