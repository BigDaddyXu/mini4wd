/* pages/setting/index.wxss */
.login {
  background-color: #FFFFFF;
  text-align: center;
}
.login-icon {
  width: 320rpx;
  height: 320rpx;
}
.login-text {
  font-size: 16px;
  line-height: 150%;
}
.login-btn {
  margin: 80rpx 40rpx;
}
.userinfo {
  height: 320rpx;
  width: 100%;
  background: #56CCF2;
  background: linear-gradient(to top, #2F80ED, #56CCF2);

  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}
.userinfo-name {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  color: #ffffff;
}
.userinfo-nickname {
  disable: block;
  font-size: 40rpx;
  font-weight: 400;
  line-height: 150%;
}
.userinfo-id {
  disable: block;
  font-size: 24rpx;
  line-height: 150%;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 40rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  flex-grow: 0;
}
.userinfo-avatar:after {
  border: 20px solid #ffffff;
}

.join {
  margin-top: 100rpx;
  text-align: center;
}